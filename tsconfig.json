{
   "include": ["src"],
   "exclude": ["example"],
   "compilerOptions": {
      "target": "ES2015",
      "module": "es2015",
      "jsx": "react",
      "outDir": "lib",
      "declaration": true,
      "declarationMap": true,
      "skipLibCheck": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true
   }
}
